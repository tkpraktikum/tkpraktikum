    "name": {
      "type": "string",
      "required": true
    },
    "submissionDeadline": {
      "type": "date"
    },
    "reviewDeadline": {
      "type": "date"
    },
    "statusSubmission": {
      "type": "number"
    },
    "statusReview": {
      "type": "number"
    },
    "sharedSecret": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    }
